@using System.IO
@using LoginAndSession
@using LoginAndSession.Components
@using Markdig
@page "/"
<style>
    .markdown-content h1 {
        font-size: 2rem;
        color: #333;
    }

    .markdown-content p {
        line-height: 1.6;
    }

    .markdown-content ul {
        padding-left: 1.5rem;
    }
</style>

<PageTitle>Sample auto GUI generator for Blazor</PageTitle>

<div class="markdown-content">
    @((MarkupString)RenderedMarkdown)
</div>

@code {
    private string RenderedMarkdown;

    protected override void OnInitialized()
    {
        var markdown = File.ReadAllText("README.md");
        RenderedMarkdown = Markdown.ToHtml(markdown);
    }
}